<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" hgap="20" prefHeight="600" prefWidth="800" style="-fx-padding: 30;" vgap="20" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.SignUpController">

    <!-- Set Column Constraints with Preferred Width -->
    <columnConstraints>
        <ColumnConstraints maxWidth="300" minWidth="150" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="500" minWidth="300" />
    </columnConstraints>

    <!-- Set Row Constraints for Spacing -->
    <rowConstraints>
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="50.0" />
      <RowConstraints />
    </rowConstraints>

    <children>
        <!-- Title Text -->
        <Text fill="#117bd6" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Reading Room Book Store" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />

        <!-- First Name Label and TextField -->
        <Label style="-fx-font-size: 16px;" text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="firstNameField" prefWidth="400" promptText="Enter first name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <!-- Last Name Label and TextField -->
        <Label style="-fx-font-size: 16px;" text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="lastNameField" prefWidth="400" promptText="Enter last name" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- User Name Label and TextField -->
        <Label style="-fx-font-size: 16px;" text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="userNameField" prefWidth="400" promptText="Enter user name" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Password Label and TextField -->
        <Label style="-fx-font-size: 16px;" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="passwordField" prefWidth="400" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <!-- Confirm Password Label and TextField -->
        <Label style="-fx-font-size: 16px;" text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="confirmPasswordField" prefWidth="400" promptText="Confirm password" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <!-- Sign Up Button -->
        <Button onAction="#signUp" prefWidth="150" text="Sign Up" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
    </children>
</GridPane>
